package com.repository;

import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Query;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import com.bean.Bill;

@Repository
public interface BillRepository extends JpaRepository<Bill, Integer>{

	public static final EntityManagerFactory emf = null;
		public default List<Bill> getAllBidPriceAsc(){
			EntityManager manager = emf.createEntityManager();
			Query qry = manager.createQuery("select b.bid from bill b order by b.price;");
			List<Bill> listofBill = qry.getResultList();
			return listofBill;
		}
	
}
